<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">ORGANIZATIONS</h4>
      </div>
      <div class="panel-body">
        <p class="bottom-buffer">
          <% if current_user.present? %>
            <%= link_to "Add New Organization", new_organization_path, class: "right" %>
          <% end %>
        </p>
        <% @user.organizations.each do |org| %>
        <div class="well well-sm">
          <p>
            <%= link_to org.name, organization_path(org) %>
          </p>
          <% if current_user.present? %>
            <% current_user.current_roles(org).each do |role| %>
            <p>
              <% if @user.image.present? %>
                <%= image_tag @user.image, height: '20' %>
              <% end %>
                <%= role.name %>
              <% end %>
            </p>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
