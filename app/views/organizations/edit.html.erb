<%= render "organizations/claim_header" %>
<div class="row">
  <div class="col-sm-12">
    <h3>
      <%= @organization.name %>
      <%= render "organizations/edit_mode" %>
    </h3>
    <p>
      <% if status == "active" %>
        <span class="label label-success status"><%= status.capitalize %></span>
      <% else %>
        <span class="label label-danger status"><%= status.capitalize %></span>
      <% end %>
      <% if @organization.hiring? %>
        <span id="label-hiring" class="label label-success status left-buffer">Hiring</span>
      <% end %>
    </p>
  </div>
</div>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">        
    <%= form_for @organization, html: {role: "form"} do |f| %>
      <div class="form-group">
        <%= f.label :headline %>
        <%= f.text_field :headline, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area "description", class: "form-control", :rows => "10" %>
      </div>
      <%= f.submit "Save Info", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">   
      <%= render "organizations/hiring" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">  
      <h4>ADDRESS</h4>
      <%= form_for @address, html: {role: "form"} do |f| %>
        <div class="form-group">
          <%= f.label :address1 %>
          <%= f.text_field :address1, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address2 %>
          <%= f.text_field :address2, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Postal Code" %>
          <%= f.text_field :zip, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Province"%>
          <%= f.text_field :state, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :country %>
          <%= f.text_field :country, class: "form-control" %>
        </div>
        <%= f.submit "Save Address", class: "btn btn-primary" %>
      <% end %> 
    </div>
  </div>
</div>

<%= render "organizations/edit_tags" %>
<%= render "organizations/edit_profile_links" %>
<%= render "organizations/edit_roles" %>
