<div class="jumbotron">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= form_tag organizations_path, method: "get", role: "form" do %>
        <div class="form-group">
          <%= text_field_tag "query", params[:query], class: "form-control input-lg search", type: "search", placeholder: "Search for Organizations", id: "home-page-search" %>
        </div>
        <div class="form-group">
          <%= collection_select :type, :ids, Type.all, :id, :name, {}, {class: "form-control multiselect-types", multiple: true, value: 'Filter by Type' } %>
          <%= collection_select :tag, :names, ActsAsTaggableOn::Tag.all, :name, :name, {}, {class: "form-control multiselect-tags", multiple: true, value: 'Filter by Type' } %>
        </div>
        <div class="submit">
          <%= submit_tag "Search", class: "btn btn-lg btn-primary search-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
