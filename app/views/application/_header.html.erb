<div class="row">
  <div class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      <%= link_to image_tag(image_path("logo.png")), organizations_path, class: "navbar-brand" %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>   

    <div class="collapse navbar-collapse left">
      <ul class="nav navbar-nav">
        <!-- TODO: hook these up -->
        <li><a href="#about">About</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
    </div><!--/.nav-collapse -->

    <div class="col-sm-4 col-sm-offset-1">
      <% if not (current_page?(organizations_path) or current_page?(root_url)) %>
        <%= form_tag organizations_path, method: "get", html: {role: "form"} do %>
          <div class="form-group form-group-buffer">
            <%= text_field_tag "query", params[:query], class: "form-control", type: "search", placeholder: "Search for Organizations" %>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= render 'shared/auth_buttons' %>
  </div>
</div>
