
<div class="jumbotron">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= form_tag search_path, method: "get", role: "form", class: "jumbotron-overlay-form" do %>
        <div class="form-group">
          <div class="input-group">
            <%= text_field_tag "query", params[:query], class: "form-control input-lg", type: "search", placeholder: "Search" %>
            <span class="input-group-btn">
              <%= submit_tag "Search", class: "btn btn-primary input-lg" %>
            </span>
          </div>
        </div>
        <div class="form-group">
          <%= collection_select :type, :ids, Type.all, :id, :name, {}, {class: "form-control multiselect-types", multiple: true, value: 'Filter by Type' } %>
          <%= collection_select :tag, :names, ActsAsTaggableOn::Tag.all, :name, :name, {}, {class: "form-control multiselect-tags", multiple: true, value: 'Filter by Type' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
